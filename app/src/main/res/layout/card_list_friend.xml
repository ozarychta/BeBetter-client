<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    style="@style/Widget.MaterialComponents.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="2sp"
    android:layout_marginVertical="1sp"
    app:cardCornerRadius="14sp"
    app:cardElevation="4sp"
    app:cardUseCompatPadding="false"
    app:cornerRadius="10sp"
    app:strokeColor="@color/primaryColor"
    app:strokeWidth="1sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6sp"
        android:layout_marginTop="6sp"
        android:layout_marginBottom="8sp"
        android:orientation="horizontal"
        android:weightSum="6">

        <ImageView
            android:id="@+id/userPicture"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4sp"
            android:layout_marginVertical="6sp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/ic_account_circle_black_48dp" />

        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4sp"
            android:layout_marginVertical="6sp"
            android:layout_weight="3"
            android:gravity="start"
            android:layout_gravity="center"
            android:textColor="@color/primaryDarkColor"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pointsLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4sp"
                android:layout_marginTop="4sp"
                android:layout_marginBottom="0sp"
                android:text="@string/ranking_points_acronym"
                android:textAlignment="center"
                android:textColor="@color/primaryDarkColor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pointsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4sp"
                android:layout_marginTop="0sp"
                android:layout_marginBottom="4sp"
                android:textAlignment="center"
                android:textColor="@color/primaryDarkColor"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/streakLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4sp"
                android:layout_marginTop="4sp"
                android:layout_marginBottom="0sp"
                android:textAlignment="center"
                android:text="@string/highest_streak_acronym"
                android:textColor="@color/primaryDarkColor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/streakTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4sp"
                android:layout_marginTop="0sp"
                android:layout_marginBottom="4sp"
                android:textAlignment="center"
                android:textColor="@color/primaryDarkColor"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>


</com.google.android.material.card.MaterialCardView>

