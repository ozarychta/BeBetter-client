<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardView"
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="false"
            app:cornerRadius="10dp"
            app:strokeColor="@color/primaryColor"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="14sp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_account_circle_black_100dp"
                    android:layout_marginVertical="10sp"
                    />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="1sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4sp"
                    android:gravity="center"
                    android:paddingHorizontal="4sp"
                    android:paddingTop="5sp"
                    android:paddingBottom="2sp"
                    android:layout_marginTop="4sp"
                    android:layout_marginBottom="6sp"
                    android:text="@string/username"
                    android:textColor="@color/secondaryDarkColor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/usernameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5sp"
                    android:layout_marginTop="0sp"
                    android:layout_marginBottom="10sp"
                    android:gravity="center"
                    android:textColor="@color/darkGrey"
                    android:textSize="18sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4sp"
                    android:gravity="center"
                    android:paddingHorizontal="4sp"
                    android:paddingTop="5sp"
                    android:paddingBottom="2sp"
                    android:layout_marginTop="4sp"
                    android:layout_marginBottom="6sp"
                    android:text="@string/about_me"
                    android:textColor="@color/secondaryDarkColor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/aboutMeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5sp"
                    android:layout_marginTop="0sp"
                    android:layout_marginBottom="10sp"
                    android:gravity="center"
                    android:textColor="@color/darkGrey"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4sp"
                    android:gravity="center"
                    android:paddingHorizontal="4sp"
                    android:paddingTop="5sp"
                    android:paddingBottom="2sp"
                    android:layout_marginTop="4sp"
                    android:layout_marginBottom="6sp"
                    android:text="@string/main_goal"
                    android:textColor="@color/secondaryDarkColor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/mainGoalTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5sp"
                    android:layout_marginTop="0sp"
                    android:layout_marginBottom="10sp"
                    android:gravity="center"
                    android:textColor="@color/darkGrey"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4sp"
                    android:gravity="center"
                    android:paddingHorizontal="4sp"
                    android:paddingTop="5sp"
                    android:paddingBottom="2sp"
                    android:layout_marginTop="4sp"
                    android:layout_marginBottom="6sp"
                    android:text="@string/ranking_points"
                    android:textColor="@color/secondaryDarkColor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/pointsTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5sp"
                    android:gravity="center"
                    android:layout_marginTop="0sp"
                    android:layout_marginBottom="10sp"
                    android:textColor="@color/darkGrey"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4sp"
                    android:gravity="center"
                    android:paddingHorizontal="4sp"
                    android:paddingTop="5sp"
                    android:paddingBottom="2sp"
                    android:layout_marginTop="4sp"
                    android:layout_marginBottom="6sp"
                    android:text="@string/highest_streak"
                    android:textColor="@color/secondaryDarkColor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/strikeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5sp"
                    android:gravity="center"
                    android:layout_marginTop="0sp"
                    android:layout_marginBottom="10sp"
                    android:textColor="@color/darkGrey"
                    android:textSize="18sp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/editBtn"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:text="@string/edit_user_info"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:backgroundTint="@color/secondaryColor"
                    app:cornerRadius="8sp"
                    app:strokeColor="@color/secondaryDarkColor"
                    app:strokeWidth="2sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/followBtn"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:text="@string/follow"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:backgroundTint="@color/secondaryColor"
                    app:cornerRadius="8sp"
                    app:strokeColor="@color/secondaryDarkColor"
                    app:strokeWidth="2sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/unfollowBtn"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:text="@string/unfollow"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:backgroundTint="@color/secondaryColor"
                    app:cornerRadius="8sp"
                    app:strokeColor="@color/secondaryDarkColor"
                    app:strokeWidth="2sp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>